<p id="notice"><%= notice %></p>

<h1>Images</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.name %></td>
        <td><%= image_tag image.picture.url, size: "100x100" if image.picture? %></td>
        <td><%= link_to 'Show', image, class: "btn btn-success button" %></td>
        <td><%= link_to 'Edit', edit_image_path(image), class: "btn btn-primary button" %></td>
        <td><%= link_to 'Delete', image, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger button" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add', new_image_path, class: "btn btn-primary button" %>
